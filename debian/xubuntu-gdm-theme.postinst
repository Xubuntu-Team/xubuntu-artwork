#!/bin/sh

set -e

case "$1" in
	upgrade)
		if [ -d /var/lib/gdm ]; then
			if [ -f /var/lib/gdm/.fehbg ]; then
				rm /var/lib/gdm/.fehbg
			fi
			if [ -f /var/lib/gdm/.fehrc ]; then
				rm /var/lib/gdm/.fehrc
			fi
			if [ -d /var/lib/gdm/.config/xfce4/ ]; then
				rm -r /var/lib/gdm/.config/xfce4/
			fi
		fi
		;;
esac

