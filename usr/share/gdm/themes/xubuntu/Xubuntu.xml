<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE greeter SYSTEM "greeter.dtd">
<greeter>

	<!-- background -->
	<item type="pixmap">
		<pos y="50%" x="0" width="2000" height="1800" anchor="w"/>

		<normal file="jaunty-gdm.png"/>
	</item>

	<!-- hostname and clock -->
	<item type="label" id="clock">
		<pos x="220px" y="-10px" anchor="sw" />
		<normal font="Sans 10" color="#bbbbbb" />
		<text>%h // %c</text>
	</item>

	<!-- messages and errors -->
	<item type="label" id="pam-message">
		<pos x="220px" y="-30px" anchor="sw" />
		<normal font="Sans 10" color="#ffffff" />
		<text></text>
	</item>
	<item type="label" id="pam-error">
		<pos x="220px" y="-50px" anchor="sw" />
		<normal font="Sans 10" color="#ffffff" />
		<text></text>
	</item>
	<item type="label" id="caps-lock-warning">
		<pos x="220px" y="-70px" anchor="sw" />
		<normal font="Sans 10" color="#ffffff" />
		<stock type="caps-lock-warning" />
	</item>
	<item type="label" id="timed-label">
		<show type="timed" />
		<pos x="220px" y="-125px" anchor="sw" />
		<normal font="Sans 10" color="#ffffff" />
		<stock type="timed-label"/>
	</item>


	<!-- username and password -->
	<item type="rect">
		<pos x="20px" y="-115px" anchor="nw" />

		<box>
			<item type="label" id="pam-prompt">
				<pos x="180px" y="2px" width="160px" anchor="ne" />
				<normal font="Sans Bold 10" color="#dddddd"/>
				<stock type="username-label" />
			</item>
		</box>
		<fixed>
			<item type="entry" id="user-pw-entry">
				<pos x="200px" y="0" width="150px" height="20px" anchor="nw" />
			</item>
		</fixed>
	</item>


	<!-- buttons -->
	<item type="rect">
		<normal color="#000000" alpha="0.15" />
		<pos y="0" x="200px" width="box" height="32" anchor="nw" />
		<box xpadding="10" spacing="10" orientation="horizontal">
			<!-- reboot -->
			<item type="rect" id="reboot_button" button="true">
				<show type="reboot" modes="console" />
				<pos y="50%" width="box" height="box" anchor="w" />
				<box xpadding="0" spacing="5" orientation="horizontal">
					<item type="pixmap">
						<pos height="24px" width="24px" />
						<normal file="icon_reboot.png" alpha="0.5" />
						<prelight file="icon_reboot.png" alpha="0.75" />
						<active file="icon_reboot.png" alpha="1" />
					</item>
					<item type="label">
						<normal font="Sans 9" color="#ffffff" />
						<prelight font="Sans 9" color="#ffffff" />
						<active font="Sans 9" color="#ffffff" />
						<pos y="50%" anchor="w" />
						<stock type="reboot" />
					</item>
				</box>
			</item>
			<!-- halt -->
			<item type="rect" id="halt_button" button="true">
				<show type="halt" modes="console" />
				<pos y="50%" width="box" height="box" anchor="w" />
				<box xpadding="0" spacing="5" orientation="horizontal">
					<item type="pixmap">
						<pos height="24px" width="24px" />
						<normal file="icon_halt.png" alpha="0.5" />
						<prelight file="icon_halt.png" alpha="0.75" />
						<active file="icon_halt.png" alpha="1" />
					</item>
					<item type="label">
						<normal font="Sans 9" color="#ffffff" />
						<prelight font="Sans 9" color="#ffffff" />
						<active font="Sans 9" color="#ffffff" />
						<pos y="50%" anchor="w" />
						<stock type="halt" />
					</item>
				</box>
			</item>
			<!-- quit / disconnect -->
			<item type="rect" id="disconnect_button" button="true">
				<normal/>
				<show modes="flexi,remote"/>
				<pos y="50%" width="box" height="box" anchor="w"/>
				<box xpadding="0" spacing="5" orientation="horizontal">
					<item type="pixmap">
						<pos height="24px" width="24px" />
						<normal file="icon_exit.png" alpha="0.5" />
						<prelight file="icon_exit.png" alpha="0.75" />
						<active file="icon_exit.png" alpha="1" />
					</item>
					<item type="label">
						<normal font="Sans 9" color="#ffffff" />
						<prelight font="Sans 9" color="#ffffff" />
						<active font="Sans 9" color="#ffffff" />
						<pos y="50%" anchor="w" />
						<stock type="disconnect" />
						<show modes="remote" />
					</item>
					<item type="label">
						<normal font="Sans 9" color="#ffffff" />
						<prelight font="Sans 9" color="#ffffff" />
						<active font="Sans 9" color="#ffffff" />
						<pos y="50%" anchor="w" />
						<stock type="quit" />
						<show modes="flexi" />
					</item>
				</box>
			</item>
			<!-- language -->
			<item type="rect" id="language_button" button="true">
				<pos x="50%" y="50%" width="box" height="box" anchor="c" />
				<box xpadding="0" spacing="5" orientation="horizontal">
					<item type="pixmap">
						<pos width="24" height="24"/>
						<normal file="icon_language.png" alpha="0.5" />
						<prelight file="icon_language.png" alpha="0.75" />
						<active file="icon_language.png" alpha="1" />
					</item>
					<item type="label">
						<normal font="Sans 9" color="#ffffff" />
						<prelight font="Sans 9" color="#ffffff" />
						<active font="Sans 9" color="#ffffff" />
						<pos y="50%" anchor="w" />
						<stock type="language" />
					</item>
				</box>
			</item>
			<!-- session -->
			<item type="rect" id="session_button" button="true">
				<pos x="50%" y="50%" width="box" height="box" anchor="c" />
				<box xpadding="0" spacing="5" orientation="horizontal">
					<item type="pixmap">
						<pos width="24" height="24"/>
						<normal file="icon_session.png" alpha="0.5" />
						<prelight file="icon_session.png" alpha="0.75" />
						<active file="icon_session.png" alpha="1" />
					</item>
					<item type="label">
						<normal font="Sans 9" color="#ffffff" />
						<prelight font="Sans 9" color="#ffffff" />
						<active font="Sans 9" color="#ffffff" />
						<pos y="50%" anchor="w" />
						<stock type="session" />
					</item>
				</box>
			</item>
			<!-- xdmcp login = chooser_button/chooser, icon_xdmcp -->
			<!-- options menu -->
			<item type="rect" id="system_button" button="true">
				<pos x="50%" y="50%" width="box" height="box" anchor="c" />
				<box xpadding="0" spacing="5" orientation="horizontal">
					<item type="pixmap">
						<pos width="24" height="24"/>
						<normal file="icon_options.png" alpha="0.5" />
						<prelight file="icon_options.png" alpha="0.75" />
						<active file="icon_options.png" alpha="1" />
					</item>
					<item type="label">
						<normal font="Sans 9" color="#ffffff" />
						<prelight font="Sans 9" color="#ffffff" />
						<active font="Sans 9" color="#ffffff" />
						<pos y="50%" anchor="w" />
						<stock type="system" />
					</item>
				</box>
			</item>
		</box>
	</item>

</greeter>
